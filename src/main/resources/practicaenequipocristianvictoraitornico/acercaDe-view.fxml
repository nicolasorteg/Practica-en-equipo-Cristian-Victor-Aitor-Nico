<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="367.0" prefWidth="479.0" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e6e6e6);                    -fx-border-color: gold; -fx-border-width: 6px;                    -fx-border-radius: 15; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Título -->
    <Label layoutX="80" layoutY="15" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #14c400;" text="Super Campeones" />

    <!-- Imagen del jugador -->
    <ImageView fx:id="imagenJugador" fitHeight="240" fitWidth="200" layoutX="75" layoutY="45" style="-fx-effect: dropshadow(gaussian, #00000088, 15, 0.5, 0, 0); -fx-background-radius: 10;" />

    <!-- Información del jugador -->
    <VBox layoutX="35" layoutY="295" prefWidth="280" spacing="6" style="-fx-background-color: #f0f0f0; -fx-background-radius: 10; -fx-padding: 10;">
        <Label style="-fx-font-size: 15px; -fx-font-weight: bold;" text="Nombre: Oliver Atom" />
        <Label style="-fx-font-size: 13px;" text="Posición: Delantero" />
        <Label style="-fx-font-size: 13px;" text="Equipo: New Team" />
        <Label style="-fx-font-size: 13px;" text="Número: 10" />
        <Label style="-fx-font-size: 13px;" text="Goles: 56" />
        <Label style="-fx-font-size: 13px;" text="Partidos Jugados: 78" />
    </VBox>

    <!-- Biografía -->
    <TextArea editable="false" layoutX="20" layoutY="400" prefHeight="60" prefWidth="310" style="-fx-control-inner-background: #f9f9f9; -fx-font-size: 12px; -fx-border-radius: 10;" wrapText="true">
        <text>
            Biografía: Capitán del New Team, líder nato y apasionado del fútbol. Su visión de juego y determinación lo convierten en un referente.
        </text>
    </TextArea>

    <!-- Botón volver -->
    <Button fx:id="btnVolver" layoutX="135" layoutY="475" style="-fx-background-color: #FFD700; -fx-font-weight: bold; -fx-text-fill: black; -fx-background-radius: 10; -fx-cursor: hand;" text="Volver" />

</AnchorPane>
